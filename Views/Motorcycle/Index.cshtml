@{
    ViewData[$"{DataResource.Title}"] = "Catalogue";
}

<div class="hidden bg-red-100 p-5 my-3 w-3/5 mx-auto rounded flex justify-between align-middle" id="MessageBox">
    <div class=" flex flex-row items-center">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="fill-current text-red-500 h-4 w-4 pb-1">
            <path d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm4.597 17.954l-4.591-4.55-4.555 4.596-1.405-1.405 4.547-4.592-4.593-4.552 1.405-1.405 4.588 4.543 4.545-4.589 1.416 1.403-4.546 4.587 4.592 4.548-1.403 1.416z" />
        </svg>
        <div class="text-sm px-1 pb-1 font-medium text-red-700">Authenticate first!</div>
    </div>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
         class="flex align-center fill-current text-red-600 h-3 w-3 mt-1" >
        <path d="M23.954 21.03l-9.184-9.095 9.092-9.174-2.832-2.807-9.09 9.179-9.176-9.088-2.81 2.81 9.186 9.105-9.095 9.184 2.81 2.81 9.112-9.192 9.18 9.1z" />
    </svg>
</div>

<div class="w-1/3 mx-auto mt-3">
    <span class="z-10 leading-snug font-normal absolute text-center text-blueGray-300 absolute bg-transparent rounded text-base items-center justify-center w-8 pl-2 py-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mt-0.5 ml-0.5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
    </span>
    <div class="flex justify-between">
        <input type="text" placeholder="Enter something..." class="px-2 pl-11 w-full text-md block py-2 rounded-l-lg w-full
                                    bg-white border-l-2 border-y-2 border-gray-300 placeholder-gray-600
                                    shadow-md focus:placeholder-gray-500 focus:bg-white
                                     focus:outline-none" id="search-input"/>
        <button class="w-24 flex items-center justify-center bg-gray-100 text-lg py-1 border border-y-2 border-gray-300 hover:border-gray-400 rounded-r-lg text-gray-600 shadow-md" id="search-button">Search</button>
    </div>
</div>

<div class="text-center container w-10/12 mx-auto">
    <div class="flex flex-wrap" id="main-block"></div>
</div>
<div class="flex flex-col justify-center items-center container w-full mx-auto">
    <button class="my-3 text-lg font-semibold
                        bg-orange-600 w-1/3 lg:w-1/4 text-white rounded-lg
                            px-6 py-3 block shadow-xl hover:text-white hover:bg-orange-800" id="load-button">
        Load More
    </button>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/MotorcycleIndex.js" asp-append-version="true"></script>