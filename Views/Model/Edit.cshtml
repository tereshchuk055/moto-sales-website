@model Model
@{
    ViewData[$"{DataResource.Title}"] = "Edit Model";
}

<form class="w-full mx-auto  mt-2 max-w-xl px-8 pt-2 pb-6" asp-controller="Model" asp-action="Edit" method="post">
    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-1/2 px-3">
            <label class="block tracking-wide text-gray-700 text-sm font-bold mb-2">
                Model Name
            </label>
            <input asp-for="ModelName" autocomplete="off" class="text-md block px-3 py-2 rounded-lg w-full
                                bg-white border-2 border-gray-300 placeholder-gray-600
                                shadow-md focus:placeholder-gray-500 focus:bg-white
                                focus:border-gray-600 focus:outline-none" type="text">
            <span asp-validation-for="ModelName" class="text-red-500 text-xs italic font-medium"></span>
        </div>
        <div class="w-1/2 px-3">
            <label class="block tracking-wide text-gray-700 text-sm font-bold mb-2">
                Brand
            </label>
            <select asp-for="BrandId" autocomplete="off" class="text-md block px-3 py-2 rounded-lg w-full
                        bg-white border-2 border-gray-300 placeholder-gray-600
                        shadow-md focus:placeholder-gray-500 focus:bg-white
                        focus:border-gray-600 focus:outline-none" type="text" id="brand-select" data-selected="@Model.BrandId">
            </select>
            <span asp-validation-for="BrandId" class="text-red-500 text-xs italic font-medium"></span>
        </div>
    </div>

    <div class="flex items-center justify-between">
        <button class="mt-3 text-lg font-semibold
                                bg-orange-600 w-full text-white rounded-lg
                                    px-6 py-3 block shadow-xl hover:text-white hover:bg-orange-800">
            Edit Model
        </button>
    </div>
</form>

<script src="~/js/ModelCreate.js"></script>