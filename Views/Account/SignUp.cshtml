@model CustomerSignUpViewModel;
@{
    ViewData[$"{DataResource.Title}"] = "Register";
}

<div class="max-w-2xl mx-auto px-6">
  <form class="w-full max-w-xl px-8 py-6 mb-4" asp-controller="Account" asp-action="SignUp" method="post">
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
        <label class="block tracking-wide text-gray-700 text-sm font-bold mb-2" for="grid-first_name">
          First Name
        </label>
                <input asp-for="FirstName" autocomplete="off"
            class="text-md block px-3 py-2 rounded-lg w-full
                        bg-white border-2 border-gray-300 placeholder-gray-600
                        shadow-md focus:placeholder-gray-500 focus:bg-white
                        focus:border-gray-600 focus:outline-none" id="grid-first_name" type="text">
                <span asp-validation-for="FirstName" class="text-red-500 text-xs italic font-medium"></span>
      </div>
      <div class="w-full md:w-1/2 px-3">
        <label class="block tracking-wide text-gray-700 text-sm font-bold mb-2" for="grid-last_name">
          Last Name
        </label>
                <input asp-for="LastName" autocomplete="off"
                       class="text-md block px-3 py-2 rounded-lg w-full
                        bg-white border-2 border-gray-300 placeholder-gray-600
                        shadow-md focus:placeholder-gray-500 focus:bg-white
                        focus:border-gray-600 focus:outline-none" id="grid-last_name" type="text">
                <span asp-validation-for="LastName" class="text-red-500 text-xs italic font-medium"></span>
      </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full px-3">
        <label class="block tracking-wide text-gray-700 text-sm font-bold mb-2" for="grid-email">
          E-mail
        </label>
                <input asp-for="Email" autocomplete="off"
            class="text-md block px-3 py-2 rounded-lg w-full
                        bg-white border-2 border-gray-300 placeholder-gray-600
                        shadow-md focus:placeholder-gray-500 focus:bg-white
                        focus:border-gray-600 focus:outline-none" id="grid-email" type="text">
                <span asp-validation-for="Email" class="text-red-500 text-xs italic font-medium"></span>
      </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
        <label class="block tracking-wide text-gray-700 text-sm font-bold mb-2" for="grid-username">
          Login
        </label>
                <input asp-for="Login" autocomplete="off"
            class="text-md block px-3 py-2 rounded-lg w-full
                        bg-white border-2 border-gray-300 placeholder-gray-600
                        shadow-md focus:placeholder-gray-500 focus:bg-white
                        focus:border-gray-600 focus:outline-none" id="grid-username" type="text">
                <span asp-validation-for="Login" class="text-red-500 text-xs italic font-medium"></span>
      </div>
      <div class="w-full md:w-1/2 px-3">
        <label class="block tracking-wide text-gray-700 text-sm font-bold mb-2" for="grid-password">
          Password
        </label>
                <input asp-for="Password" autocomplete="off"
            class="text-md block px-3 py-2 rounded-lg w-full
                        bg-white border-2 border-gray-300 placeholder-gray-600
                        shadow-md focus:placeholder-gray-500 focus:bg-white
                        focus:border-gray-600 focus:outline-none" id="grid-password" type="password">
                <span asp-validation-for="Password" class="text-red-500 text-xs italic font-medium"></span>
      </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full px-3">
        <label class="block tracking-wide text-gray-700 text-sm font-bold mb-2" for="grid-street">
          Phone
        </label>
                <input asp-for="Phone" autocomplete="off"
            class="text-md block px-3 py-2 rounded-lg w-full
                    bg-white border-2 border-gray-300 placeholder-gray-600
                    shadow-md focus:placeholder-gray-500 focus:bg-white
                    focus:border-gray-600 focus:outline-none" id="grid-street" type="text">
                <span asp-validation-for="Phone" class="text-red-500 text-xs italic font-medium"></span>
      </div>
    </div>
    
    <div class="flex justify-between my-4">
      <span class="text-gray-600 font-bold">
        Already have an account?
      </span>
      <a asp-controller="Account" asp-action="Login"
        class="cursor-pointer tracking-tighter text-black border-b-2 border-orange-300 hover:border-orange-500">
        <span class="text-orange-600 font-bold">
          Sign in
        </span>
      </a>
    </div>
    <div class="flex items-center justify-between">
      <button class="mt-3 text-lg font-semibold
                        bg-orange-600 w-full text-white rounded-lg
                            px-6 py-3 block shadow-xl hover:text-white hover:bg-orange-800">
        Sign Up
      </button>
    </div>
    @if (!string.IsNullOrEmpty(@ViewData[$"{DataResource.Info}"]?.ToString()))
    {
        <div class="bg-green-100 p-5 mt-3 w-full rounded" id="Message">
            <div class="flex justify-between items-center">
                <div class="flex space-x-3">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="flex-none fill-current text-green-500 h-4 w-4">
                        <path d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm-1.25 16.518l-4.5-4.319 1.396-1.435 3.078 2.937 6.105-6.218 1.421 1.409-7.5 7.626z" />
                    </svg>
                    <div class="flex-1 leading-tight text-sm text-green-700 font-medium">@ViewData[$"{DataResource.Info}"]</div>
                </div>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="flex-none fill-current text-green-600 h-3 w-3" id="close-message">
                    <path d="M23.954 21.03l-9.184-9.095 9.092-9.174-2.832-2.807-9.09 9.179-9.176-9.088-2.81 2.81 9.186 9.105-9.095 9.184 2.81 2.81 9.112-9.192 9.18 9.1z" />
                </svg>
            </div>
        </div>
    }
  </form>
</div>