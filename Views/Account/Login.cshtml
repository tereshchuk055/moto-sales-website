@model CustomerSignInViewModel;
@{
    ViewData[$"{DataResource.Title}"] = "Login";
}

<div class="max-w-sm mx-auto px-6">
    <div class="relative flex flex-wrap">
        <div class="w-full relative">
            <div class="mt-6">
                <form class="mt-8" asp-controller="Account" asp-action="Login" method="post">
                    <div class="mx-auto max-w-lg">
                        <div class="py-2">
                            <span class="px-1 text-gray-600 text-sm font-bold">Login</span>
                            <input placeholder="" type="text" asp-for="Login" autocomplete="off"
                                class="text-md block px-3 py-2 rounded-lg w-full
                                    bg-white border-2 border-gray-300 placeholder-gray-600
                                    shadow-md focus:placeholder-gray-500 focus:bg-white 
                                    focus:border-gray-600 focus:outline-none">
                            <span asp-validation-for="Login" class="text-red-500 text-xs italic font-medium"></span>
                        </div>
                        <div class="py-2" x-data="{ show: true }">
                            <span class="px-1 text-gray-600 text-sm font-bold">Password</span>
                            <div class="relative">
                                <input type="password" asp-for="Password" id="PasswordInput" autocomplete="off"  class="text-md block px-3 py-2 rounded-lg w-full
                                    bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md
                                    focus:placeholder-gray-500
                                    focus:bg-white
                                    focus:border-gray-600
                                    focus:outline-none">
                                <div class="absolute inset-y-0 right-0 pr-3 flex items-center text-sm leading-5">

                                    <svg class="h-6 text-gray-600 cursor-pointer" fill="none" viewbox="0 0 576 512" id="ShowPasswordBtn">
                                        <path fill="currentColor"
                                            d="M572.52 241.4C518.29 135.59 410.93 64 288 64S57.68 135.64 3.48 241.41a32.35 32.35 
                                            0 0 0 0 29.19C57.71 376.41 165.07 448 288 448s230.32-71.64 284.52-177.41a32.35 32.35 
                                            0 0 0 0-29.19zM288 400a144 144 0 1 1 144-144 143.93 143.93 0 0 1-144 144zm0-240a95.31 
                                            95.31 0 0 0-25.31 3.79 47.85 47.85 0 0 1-66.9 66.9A95.78 95.78 0 1 0 288 160z">
                                        </path>
                                    </svg>

                                    <svg class="h-6 text-gray-600 cursor-pointer hidden" fill="none" viewbox="0 0 640 512" id="HidePasswordBtn">
                                        <path fill="currentColor"
                                            d="M320 400c-75.85 0-137.25-58.71-142.9-133.11L72.2 185.82c-13.79 17.3-26.48 35.59-36.72 
                                            55.59a32.35 32.35 0 0 0 0 29.19C89.71 376.41 197.07 448 320 448c26.91 0 52.87-4 
                                            77.89-10.46L346 397.39a144.13 144.13 0 0 1-26 2.61zm313.82 58.1l-110.55-85.44a331.25 
                                            331.25 0 0 0 81.25-102.07 32.35 32.35 0 0 0 0-29.19C550.29 135.59 442.93 64 320 64a308.15 
                                            308.15 0 0 0-147.32 37.7L45.46 3.37A16 16 0 0 0 23 6.18L3.37 31.45A16 16 0 0 0 6.18 
                                            53.9l588.36 454.73a16 16 0 0 0 22.46-2.81l19.64-25.27a16 16 0 0 0-2.82-22.45zm-183.72-142l-39.3-30.38A94.75 94.75 
                                            0 0 0 416 256a94.76 94.76 0 0 0-121.31-92.21A47.65 47.65 0 0 1 304 192a46.64 46.64 0 0 1-1.54 
                                            10l-73.61-56.89A142.31 142.31 0 0 1 320 112a143.92 143.92 0 0 1 144 144c0 21.63-5.29 41.79-13.9 60.11z">
                                        </path>
                                    </svg>

                                </div>
                            </div>
                            <span asp-validation-for="Password" class="text-red-500 text-xs italic font-medium"></span>
                        </div>
                        <div class="flex justify-between my-4">
                            <span class="text-gray-600 font-bold">
                                    Don't have an account yet?
                                </span>
                                <a asp-controller="Account" asp-action="Signup"
                                   class="cursor-pointer tracking-tighter text-black border-b-2 border-orange-300 hover:border-orange-500">
                                    <span class="text-orange-600 font-bold">
                                        Create one
                                    </span>
                                </a>
                        </div>
                        <button class="mt-3 text-lg font-semibold
                            bg-orange-600 w-full text-white rounded-lg
                                px-6 py-3 block shadow-xl hover:text-white hover:bg-orange-800">
                            Sign In
                        </button>
                    </div>
                </form>
            </div>
            @if (@ViewData[$"{DataResource.Error}"] is not null)
            {
                <div class="bg-red-100 p-5 w-full flex flex-col my-4">
                    <div class=" flex flex-row items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="fill-current text-red-500 h-4 w-4 pb-1">
                            <path d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm4.597 17.954l-4.591-4.55-4.555 4.596-1.405-1.405 4.547-4.592-4.593-4.552 1.405-1.405 4.588 4.543 4.545-4.589 1.416 1.403-4.546 4.587 4.592 4.548-1.403 1.416z" />
                        </svg>
                        <div class="text-sm px-1 pb-1 font-medium text-red-700">Failed to Sign In</div>
                    </div>
                    
                    <div class="leading-tight flex flex-col space-y-2">
                        <div class="flex-1 leading-snug text-sm text-red-600">@ViewData[$"{DataResource.Error}"]</div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script src="~/js/SignIn.js" asp-append-version="true"></script>