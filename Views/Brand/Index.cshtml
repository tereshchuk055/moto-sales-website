@model BrandIndexViewModel
@{
    ViewData[$"{DataResource.Title}"] = $"{Model.Brand.BrandName}";
}

<div class="text-center container w-10/12 mx-auto">
    <div class="flex flex-wrap" id="main-block">
        @foreach (var motorcycle in Model.Motorcycles)
        {
            <div class="my-1 px-1 w-full md:w-1/2 lg:my-4 lg:px-4 lg:w-1/4">
                <div class="block overflow-hidden rounded-lg shadow-lg border-2 border-gray-300">
                    <div>
                        @if (!string.IsNullOrEmpty(@motorcycle.Photo))
                        {
                            <img alt="Photo should be here 0_0" class="block h-auto w-full rounded-t-lg" src="@motorcycle.Photo">
                        }
                        else
                        {
                            <img alt="Photo should be here 0_0" class="block h-auto w-full" src="~/images/Silhouette.jpg">
                        }
                        <header class="flex items-center justify-between leading-tight p-2 md:p-4">
                            <h1 class="text-2xl text-gray-600 font-medium">@motorcycle.Brand @motorcycle.Model</h1>
                        </header>
                        <footer class="flex flex-col leading-none p-2 md:p-4">
                            <p class="ml-1 text-xl text-gray-600 font-medium flex justify-between items-center">
                                <i class="fa-solid fa-motorcycle"></i>
                                <span>@motorcycle.Type</span>
                            </p>
                            <p class="ml-1 text-xl text-gray-600 font-medium flex justify-between items-center">
                                <i class="fa-solid fa-calendar-days"></i>
                                <span>@motorcycle.Manufactured</span>
                            </p>
                            <p class="ml-1 text-xl text-gray-600 font-medium flex justify-between items-center">
                                <i class="fas fa-prescription-bottle" aria-hidden="true"></i>
                                <span>@motorcycle.EngineDisplacement cm<sup>3</sup></span>
                            </p>
                        </footer>
                    </div>
                    <div class="p-2 w-full flex flex-row justify-between">
                        <span class=" text-xl text-gray-600 font-medium px-1">@motorcycle.Price</span>
                        <button class="sm:text-center lg:px-4 md:mx-2 text-white font-semibold rounded bg-orange-600 hover:bg-orange-800" 
                                data-vin="@motorcycle.VIN">Purchase</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="~/js/BrandIdndex.js"></script>