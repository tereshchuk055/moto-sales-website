@model OrderIndexViewModel
@{
    ViewData[$"{DataResource.Title}"] = "Orders";
}

<div class="w-3/5 mx-auto mt-4">
    <div class="flex flex-col">
        <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
            <div class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200">
                <table class="min-w-full">
                    <thead>
                        <tr>
                            <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                                General Info
                            </th>
                            <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                                Engine
                            </th>
                            <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                                Manufactored
                            </th>
                            <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                                Price
                            </th>
                            <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white" id="orders-table">
                        @foreach (var order in Model.Orders)
                        {
                            <tr class="border-b border-gray-200">
                                <td class="px-6 py-4 whitespace-no-wrap">
                                    <div class="flex items-center">
                                        <div class="ml-4">
                                            <div class="text-sm leading-5 font-medium text-gray-900">@order.Brand @order.Model</div>
                                            <div class="text-sm leading-5 text-gray-500">@order.VIN</div>
                                        </div>
                                    </div>
                                </td>

                                <td class="px-6 py-4 whitespace-no-wrap">
                                    <div class="text-sm leading-5 text-gray-900">@order.EngineDisplacement CM<sup>3</sup></div>
                                </td>
                                <td class="px-6 py-4 whitespace-no-wrap text-sm leading-5 text-gray-500">
                                    <div class="text-sm leading-5 text-gray-900">@order.Manufactured</div>
                                </td>
                                <td class="px-6 py-4 whitespace-no-wrap text-sm leading-5 text-gray-500">
                                    <div class="text-sm leading-5 text-gray-900">@order.Price</div>
                                </td>
                                <td class="px-6 py-4 whitespace-no-wrap">
                                    <button data-id="@order.Id" class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800 mx-3 hover:cursor-pointer">
                                        Delete
                                    </button>
                                </td>
                            </tr>
                        }
                        <tr class="border-b border-gray-200">
                           
                            <td class="px-6 py-4 whitespace-no-wrap text-sm leading-5 text-gray-500"> 
                            </td>
                            <td class="px-6 py-4 whitespace-no-wrap text-sm leading-5 text-gray-500"> 
                            </td>
                            <td class="px-6 py-4 whitespace-no-wrap text-sm leading-5 text-gray-500"> 
                            </td>
                            <td class="px-6 py-4 whitespace-no-wrap text-sm leading-5 text-gray-500">
                            </td>
                            <td class="px-6 py-4 whitespace-no-wrap">
                                <div class="px-4 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-200 text-green-900 mx-3 hover:cursor-pointer" id="buy-button">
                                    Buy
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
            
        </div>
    </div>
</div>

<script src="~/js/OrderIndex.js"></script>